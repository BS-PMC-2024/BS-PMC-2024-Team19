pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                git 'https://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@github.com/BS-PMC-2024/BS-PMC-2024-Team19.git'
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    dockerImage = docker.build("node:latest")
                }
                dockerImage.inside {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'npm run build'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'npm test'
                    }
                }
            }
        }

        stage('Push Docker image') {
            steps {
                script {
                    dockerImage.tag('talelzam/frontend:latest')
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.image("talelzam/frontend:latest").inside {
                        sh 'serve -s build'
                    }
                }
            }
        }
    }
}