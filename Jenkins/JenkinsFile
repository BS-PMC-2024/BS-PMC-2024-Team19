pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                git 'https://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@github.com/BS-PMC-2024/BS-PMC-2024-Team19.git'
            }
        }

        stage('Verify Dockerfile and package.json') {
            steps {
                script {
                    // Display the contents of the root and backend directories to verify the presence of Dockerfile and package.json
                    sh 'pwd'
                    sh 'ls -la'
                    dir('backend') {
                        sh 'cat package.json'
                        sh 'ls -la'
                        sh 'cat Dockerfile'  // Ensure Dockerfile is present and view its contents
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    dir('backend') {
                        // Build Docker image
                        dockerImageBackend = docker.build("backend-image", '.')
                    }
                }
            }
        }

        stage('Test Backend') {
            steps {
                script {
                    dir('backend') {
                        dockerImageBackend.inside {
                            sh 'npm test'
                        }
                    }
                }
            }
        }

        stage('Push Docker image') {
            steps {
                script {
                    dockerImageBackend.tag('talelzam/backend:latest')
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        dockerImageBackend.push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.image("talelzam/backend:latest").inside {
                        sh 'node index.js'
                    }
                }
            }
        }
    }
}

