pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                git 'https://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@github.com/BS-PMC-2024/BS-PMC-2024-Team19.git'
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    // Build the Docker image for the backend
                    dockerImageBackend = docker.build("backend-image", "-f backend/Dockerfile .")
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    dockerImageBackend.inside {
                        // Install dependencies and run tests
                        sh 'npm install'
                        sh 'npm test'
                    }
                }
            }
        }

        stage('Push Docker image') {
            steps {
                script {
                    dockerImageBackend.tag('talelzam/backend:latest')
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        dockerImageBackend.push()
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.image("talelzam/backend:latest").inside {
                        sh 'node index.js' // or whatever the command is to start the application
                    }
                }
            }
        }
    }
}
